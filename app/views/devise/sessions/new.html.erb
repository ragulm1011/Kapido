<div style = "float:left;width:10px;height:10px;">
  <img src = "<%=image_path('3071357.jpg')%>" height = 750px style = "position:fixed;">
</div> 




<div style = "float: right;margin-right: 200px;margin-top:120px">
<h1 class = "display-6 lead">SIGN IN</h2>
<br>

 <div class="card shadow shadow-md" style="width: 30rem;">
  <div class="card-body">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email , "EMAIL" , class: "display-8 lead"%><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "form-control" , required: true%>
  </div>
  <br>

  <div class="field">
    <%= f.label :password , "PASSWORD" , class: "display-8 lead" %><br /> 
    <%= f.password_field :password, autocomplete: "current-password" , class: "form-control" , required: true%>
  </div>

  <br>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me , class: "display-8 lead"%>
    </div>
  <% end %>

  <br>

  <div class="actions">
    <%= f.submit "Log in" , class: "btn btn-primary"%>
  </div>
  </div>
  </div>
<% end %>

<br>

<p class = "lead"> DIDN'T HAVE AN ACCOUNT ON KAPIDO ?  <%= link_to "SIGNUP", new_user_registration_path , class: "btn btn-light" %> </p>
<p class = "lead"> OOPS FORGOT YOUR PASSWORD , NO WORRIES !!<%= link_to "Forgot Password", new_user_password_path , class: "btn btn-light" %> </p>
</div>
