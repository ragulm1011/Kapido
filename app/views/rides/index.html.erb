<div style = "float:left;width:10px;height:10px;">
  <img src = "<%=image_path('rides.jpg')%>" width=950px height=700px style = "position:absolute;">
</div> 





<div style = "float:right;margin-right:500px">
    
    <% if current_user.driver? %>
        <% unless @rides.empty?%>
        <h1> Your Rides </h1>
        <br><br>
        <% @rides.each do |i| %>
             <div class="card bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header">Ride <%=@rides.find_index(i)+1%></div>
  <div class="card-body">
    <% @booking = BookingRequest.find(i.booking_request_id) %>
    <h6 class="card-title"><%="From : #{@booking.from_location_name}"%></h6>
    <h6 class="card-title"><%="To : #{@booking.to_location_name}"%></h6>
    <% @rider = User.find_by(userable_id: i.rider_id) %>
    <h6 class = "card-title"><%= "Rider Name : #{@rider.name}" %>
    <h6 class = "card-title"><%= "Ride date : #{i.ride_date}" %>
    <% @bill = Bill.find_by(ride_id: i.id) %>

    <% if @bill %>
    <h6 class = "card-title"><%= "Ride amount : #{@bill.bill_amount}" %>
    <% end %>
    
  </div>
</div>
            
        
    <%end%>
    <% else %>
        <h1> No rides found </h1>
    <%end %>
        
    <% else %>

    <% unless @rides.length == 0%>
        <h1> Your Rides </h1>
        <br> <br>
        <% @rides.each do |i| %>
             <div class="card bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header">Ride <%=@rides.find_index(i)+1%></div>
  <div class="card-body">
    <% @booking = BookingRequest.find(i.booking_request_id) %>
    <h6 class="card-title"><%="From : #{@booking.from_location_name}"%></h6>
    <h6 class="card-title"><%="To : #{@booking.to_location_name}"%></h6>
    <% @driver = User.find_by(userable_id: i.driver_id) %>
    <h6 class = "card-title"><%= "Driver Name : #{@driver.name}" %>
    <h6 class = "card-title"><%= "Ride date : #{i.ride_date}" %>
    <% @bill = Bill.find_by(ride_id: i.id) %>

    <% if @bill %>
    <h6 class = "card-title"><%= "Ride amount : #{@bill.bill_amount}" %>
    <%end%>
    
    
  </div>
</div>
            
        
    <%end%>
    <% else %>
        <h1> No rides found </h1>
    <%end %>

    <% end %>
</div>
