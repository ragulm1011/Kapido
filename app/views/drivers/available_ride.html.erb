<div style = "float:right ; margin-right : 250px">


<div style = "display : flex ; flex-direction : column">
<%unless @available.size == 0%>
    <h2> The rides available for you </h2>
    <br><br>

    <%@available.each do |i|%>
        
            <div class="card bg-light mb-3" style="max-width: 18rem;">
  <div class="card-header">Ride <%=@available.find_index(i)+1%></div>
  <div class="card-body">
    <h6 class="card-title"><%="From : #{i.from_location_name}"%></h6>
    <h6 class="card-title"><%="To : #{i.to_location_name}"%></h6>
    <% @rider = User.find_by(userable_id: i.rider_id) %>
    <h6 class = "card-title"><%="Rider Name : #{@rider.name}"%></h6>
     <h6 class = "card-title"><%= "Rider Age : #{@rider.age}" %></h6>
      <h6 class = "card-title"><%= "Rider Mobile : #{@rider.mobile_no}" %></h6>
    
    <%= link_to "Accept this ride", new_ride_path(id: i.id) , class: "btn btn-primary btn-sm" %>
  </div>
</div>
           
        
    <%end%>
</div>

<%else%>
  <h2> No rides </h2>
  <h4> Available for you at the moment </h4>
<%end%>

</div>