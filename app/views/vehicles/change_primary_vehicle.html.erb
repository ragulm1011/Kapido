
<div style = "float:left;width:10px;height:10px;margin-left:30px">
  <img src = "<%=image_path('urban_racing_5.jpg')%>" width=950 height=650px style = "position:fixed;">
</div> 



<div style = "float:right ; margin-right : 300px">

<h1 class = "display-6 lead" > YOUR VEHICLES </h1>
<div style = "display : flex ; flex-direction : column">
<%unless @vehicles.size == 0%>
    
    <br><br>

    <%@vehicles.each do |i|%>
        
            <div class="card bg-light mb-3 shadow shadow-md" style="max-width: 25rem;">
  <div class="card-header" style = "text-align:center"> <p class = "display-7 lead" > <b> VEHICLE <%=@vehicles.find_index(i)+1%> </b> </p> </div>
  <div class="card-body">
    <h6 class="card-title"> <p class = "display-8 lead"> <b> <%="VEHICLE NAME:  #{i.vehicle_name}"%> </b> </p> </h6>
    <h6 class="card-title"> <p class = "display-8 lead"> <b> <%="VEHICLE TYPE:  #{i.vehicle_type}"%> </b> </h6>
    <h6 class="card-title"> <p class = "display-8 lead"> <b> <%="VEHICLE NUMBER:  #{i.vehicle_no}"%> </b> </h6>
  
    <% unless current_user.userable.primary_vehicle_id == i.id%>
    <%= link_to "Make as primary", set_primary_vehicle_path(id: i.id) , class: "btn btn-primary btn-sm" %>
    <% else %>
        <button type="button" class="btn btn-secondary btn-sm" disabled>Primary Vehicle</button>
    <% end %>
  </div>
</div>
            
        
    <%end%>
</div>

<%else%>
  <h1> Add your vehicle fist </h1>
  <%= link_to "Add Vehicle", new_vehicle_path %>
<%end%>

</div>